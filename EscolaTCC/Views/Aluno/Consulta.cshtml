@model IEnumerable<EscolaTCC.Models.Aluno>

@{
    ViewData["Title"] = "Consulta";

    //Talvez essa lógica seja deprimente, porém é um bom desencargo de consciência.
    int resposta = Convert.ToInt32(TempData["ExclusaoAluno"]);

    if (resposta == 1)
    {
        <script type="text/JavaScript">
            alert('Exclusão feita com sucesso!');

        </script>
    }
    else if (resposta == 2)
    {
        <script type="text/JavaScript">
            alert('Erro na exclusão!');

        </script>
    }
    else { }
}

<h2>Consulta de Aluno</h2>

<p>
    <a asp-action="Index" style="margin-left:5%;">Cadastrar novo Aluno</a>
</p>

<div class="container">
    <form class="" style="display:block; margin:0; width:50%;" role="search">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Digite o código do aluno" style="width:50%;">
            <button type="submit" class="btn btn-default">Pesquisar</button>
        </div>
    </form>
</div>
<hr />
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cd_Aluno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nm_Aluno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dt_NascAluno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cpf_Resp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cd_Turma)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cd_Aluno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nm_Aluno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dt_NascAluno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cpf_Resp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cd_Turma)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { id = item.Cd_Aluno }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Cd_Aluno }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Excluir", "Excluir", new { id = item.Cd_Aluno, }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
