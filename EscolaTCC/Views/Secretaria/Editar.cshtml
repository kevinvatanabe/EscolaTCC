@model EscolaTCC.Models.BLL.Funcionario

@{
    ViewData["Title"] = "Editar";

    //Talvez essa lógica seja deprimente, porém é um bom desencargo de consciência.
    int resposta = Convert.ToInt32(ViewData["ResultadoAlterSecretaria"]);

    if (resposta == 1)
    {
        <script type="text/JavaScript">
            alert('Cadastro feito com sucesso!');

        </script>
    }
    else if (resposta == 2)
    {
        <script type="text/JavaScript">
            alert('CPF já cadastrado ou E-mail da conta já cadastrado!');

        </script>
    }
    else
    {

    }
}

<h2>Edição de Secretaria</h2>
<hr />
<div style="width:100%">
    <fieldset class="well" style="display:block; margin:0 auto; width:70%;">
        <legend>Edição de Secretaria</legend>

        <form asp-action="Editar" style="display:block; margin:0 auto; width:70%;">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Cd_Func" class="control-label"></label>
                <input asp-for="Cd_Func" class="form-control" />
                <span asp-validation-for="Cd_Func" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nm_Func" class="control-label"></label>
                <input asp-for="Nm_Func" class="form-control" />
                <span asp-validation-for="Nm_Func" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="No_CpfFunc" class="control-label"></label>
                <input asp-for="No_CpfFunc" class="form-control" />
                <span asp-validation-for="No_CpfFunc" class="text-danger"></span>
            </div>

            <div class="form-inline">
                <label asp-for="No_RgFunc" class="control-label"></label>
                <input asp-for="No_RgFunc" class="form-control" />
                <span asp-validation-for="No_RgFunc" class="text-danger"></span>

                <label asp-for="Rg_DigFunc" class="control-label"></label>
                <input asp-for="Rg_DigFunc" class="form-control" style="width:50px" />
                <span asp-validation-for="Rg_DigFunc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="No_TelFunc" class="control-label"></label>
                <input asp-for="No_TelFunc" class="form-control" />
                <span asp-validation-for="No_TelFunc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nm_EmailFunc" class="control-label"></label>
                <input asp-for="Nm_EmailFunc" class="form-control" />
                <span asp-validation-for="Nm_EmailFunc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dt_NascFunc" class="control-label"></label>
                <input asp-for="Dt_NascFunc" class="form-control" />
                <span asp-validation-for="Dt_NascFunc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="No_EndFunc" class="control-label"></label>
                <input asp-for="No_EndFunc" class="form-control" />
                <span asp-validation-for="No_EndFunc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ds_CompleFunc" class="control-label"></label>
                <input asp-for="Ds_CompleFunc" class="form-control" />
                <span asp-validation-for="Ds_CompleFunc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="No_Salario" class="control-label"></label>
                <input asp-for="No_Salario" class="form-control" />
                <span asp-validation-for="No_Salario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ds_Formacao" class="control-label"></label>
                <input asp-for="Ds_Formacao" class="form-control" />
                <span asp-validation-for="Ds_Formacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="No_CepFunc" class="control-label"></label>
                <input asp-for="No_CepFunc" class="form-control" />
                <span asp-validation-for="No_CepFunc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cd_Login" class="control-label"></label>
                <input asp-for="Cd_Login" class="form-control" />
                <span asp-validation-for="Cd_Login" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nm_Email" class="control-label"></label>
                <input asp-for="Nm_Email" class="form-control" />
                <span asp-validation-for="Nm_Email" class="text-danger"></span>
            </div>

            <div class="form-inline">
                <label asp-for="Nm_Senha" class="control-label"></label>
                <input asp-for="Nm_Senha" class="form-control" style="width:30%" />
                <span asp-validation-for="Nm_Senha" class="text-danger"></span>


                <label class="control-label">Confirmar Senha</label>
                <input type="password" class="form-control" style="width:30%" />
            </div>

            <div class="form-group" style="text-align:center;">

                <input type="submit" value="Atualizar" class="btn btn-success" />

            </div>
        </form>

        <div>
            <a asp-action="Consulta" style="margin-left:10%;">Voltar para lista</a>
        </div>

    </fieldset>
</div>

