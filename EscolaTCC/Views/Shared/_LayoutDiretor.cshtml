@{
//Precisamos desta sessão para pegar os valores das Sessions usadas
    @using Microsoft.AspNetCore.Http
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    string emailDiretor;

    emailDiretor = Convert.ToString(@HttpContextAccessor.HttpContext.Session.GetString("Email"));

    TempData["Email"] = emailDiretor;
}
