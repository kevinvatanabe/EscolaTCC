@model EscolaTCC.Models.BLL.TurmaAluno

@{
    ViewData["Title"] = "Cadastro da Matéria e Professor";

    //Talvez essa lógica seja deprimente, porém é um bom desencargo de consciência.
int resposta = Convert.ToInt32(TempData["ResultadoMateria"]);

    if (resposta == 1)
    {
        <script type="text/JavaScript">
            alert('Matéria e Professor cadastrados!');

        </script>
    }
    else if (resposta == 2)
    {
        <script type="text/JavaScript">
            alert('Erro inesperado!');

        </script>
    }
    else
    {

    }
}

<h2>Cadastro da Matéria e Professor</h2>

<hr />
<div style="width:100%">
    <fieldset class="well" style="display:block; margin:0 auto; width:70%;">
        <legend>Cadastro de Matéria e Professor</legend>
        <form asp-action="Cadastro" style="display:block; margin:0 auto; width:70%;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Cpf_Prof" class="control-label"></label>
                <input asp-for="Cpf_Prof" class="form-control" />
                <span asp-validation-for="Cpf_Prof" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nm_Materia" class="control-label"></label>
                <input asp-for="Nm_Materia" class="form-control" />
                <span asp-validation-for="Nm_Materia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cd_Turma" class="control-label"></label>
                <input asp-for="Cd_Turma" class="form-control" />
                <span asp-validation-for="Cd_Turma" class="text-danger"></span>
            </div>

            <div class="form-group" style="text-align:center;">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
        <div>
            @Html.ActionLink("Voltar para lista", "Editar", new { id = Model.Cd_Turma })
        </div>
    </fieldset>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
